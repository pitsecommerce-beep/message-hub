rules_version = '2';

// NOTA SOBRE CLOUD FUNCTIONS:
// Las Cloud Functions de Firebase usan el Admin SDK, que opera con
// privilegios de administrador y omite estas reglas de seguridad por
// completo. No se necesita ninguna regla adicional para que las funciones
// puedan leer/escribir en Firestore. Las reglas siguientes aplican
// exclusivamente a clientes del SDK de navegador (frontend).

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: verifica si el usuario autenticado es miembro de la organización
    function isOrgMember(orgId) {
      return request.auth != null &&
        request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members;
    }

    // ===== USUARIOS =====
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // ===== ORGANIZACIONES =====
    match /organizations/{orgId} {
      // Cualquier autenticado puede leer (necesario para buscar por inviteCode)
      allow read: if request.auth != null;

      // Cualquier autenticado puede crear su org
      allow create: if request.auth != null;

      // Miembros existentes pueden actualizar,
      // O usuarios nuevos que se agregan al array de members (unirse como agente)
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.members ||
        request.auth.uid in request.resource.data.members
      );

      // Sub-colecciones de organizaciones
      match /{path=**} {
        allow read, write: if isOrgMember(orgId);
      }
    }

    // ===== CONVERSACIONES =====
    // Colección raíz con campo orgId — miembros de la org pueden leer/escribir
    match /conversations/{convId} {
      allow read, write: if request.auth != null && isOrgMember(resource.data.orgId);
      allow create:       if request.auth != null && isOrgMember(request.resource.data.orgId);

      // Sub-colección de mensajes dentro de cada conversación
      match /messages/{msgId} {
        allow read, write: if request.auth != null &&
          isOrgMember(get(/databases/$(database)/documents/conversations/$(convId)).data.orgId);
      }
    }

    // ===== CONTACTOS =====
    match /contacts/{contactId} {
      allow read, write: if request.auth != null && isOrgMember(resource.data.orgId);
      allow create:       if request.auth != null && isOrgMember(request.resource.data.orgId);
    }

    // ===== PEDIDOS =====
    match /orders/{orderId} {
      allow read, write: if request.auth != null && isOrgMember(resource.data.orgId);
      allow create:       if request.auth != null && isOrgMember(request.resource.data.orgId);
    }

    // ===== AGENTES IA =====
    match /aiAgents/{agentId} {
      allow read, write: if request.auth != null && isOrgMember(resource.data.orgId);
      allow create:       if request.auth != null && isOrgMember(request.resource.data.orgId);
    }

    // ===== INTEGRACIONES =====
    match /integrations/{integrationId} {
      allow read, write: if request.auth != null && isOrgMember(resource.data.orgId);
      allow create:       if request.auth != null && isOrgMember(request.resource.data.orgId);
    }

    // ===== BASES DE CONOCIMIENTO =====
    match /knowledgeBases/{kbId} {
      allow read, write: if request.auth != null && isOrgMember(resource.data.orgId);
      allow create:       if request.auth != null && isOrgMember(request.resource.data.orgId);

      // Sub-colección de filas
      match /rows/{rowId} {
        allow read, write: if request.auth != null &&
          isOrgMember(get(/databases/$(database)/documents/knowledgeBases/$(kbId)).data.orgId);
      }
    }

    // ===== PAYMENT LINKS =====
    match /paymentLinks/{linkId} {
      allow read, write: if request.auth != null && isOrgMember(resource.data.orgId);
      allow create:       if request.auth != null && isOrgMember(request.resource.data.orgId);
    }
  }
}
