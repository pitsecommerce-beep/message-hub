rules_version = '2';

// NOTA SOBRE CLOUD FUNCTIONS:
// Las Cloud Functions de Firebase usan el Admin SDK, que opera con
// privilegios de administrador y omite estas reglas de seguridad por
// completo. No se necesita ninguna regla adicional para que las funciones
// puedan leer/escribir en Firestore. Las reglas siguientes aplican
// exclusivamente a clientes del SDK de navegador (frontend).
//
// ARQUITECTURA DE DATOS:
// Todos los datos de negocio (conversaciones, contactos, pedidos, agentes IA,
// integraciones, bases de conocimiento, etc.) se almacenan como sub-colecciones
// dentro de organizations/{orgId}/... Las únicas colecciones raíz son "users"
// y "organizations".

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: verifica si el usuario autenticado es miembro de la organización.
    function isOrgMember(orgId) {
      return request.auth != null
        && exists(/databases/$(database)/documents/organizations/$(orgId))
        && request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.get('members', []);
    }

    // ===== USUARIOS =====
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // ===== ORGANIZACIONES =====
    match /organizations/{orgId} {
      // Cualquier autenticado puede leer (necesario para buscar por inviteCode)
      allow read: if request.auth != null;

      // Cualquier autenticado puede crear su org
      allow create: if request.auth != null;

      // Miembros existentes pueden actualizar,
      // O usuarios nuevos que se agregan al array de members (unirse como agente)
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.members ||
        request.auth.uid in request.resource.data.members
      );

      // Todas las sub-colecciones de la organización (conversations, contacts,
      // orders, aiAgents, integrations, knowledgeBases, paymentLinks, etc.)
      // son accesibles solo por miembros de la organización.
      match /{path=**} {
        allow read, write: if isOrgMember(orgId);
      }
    }
  }
}
