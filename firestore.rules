rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== USUARIOS =====
    // Cada usuario puede leer/escribir su propio documento
    // Cualquier usuario autenticado puede leer otros usuarios (para mostrar equipo)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // ===== ORGANIZACIONES =====
    match /organizations/{orgId} {
      // Cualquier autenticado puede leer (necesario para buscar por inviteCode)
      allow read: if request.auth != null;

      // Solo autenticados pueden crear (al crear org como gerente)
      allow create: if request.auth != null;

      // Solo miembros de la org o nuevos agentes uniendose pueden actualizar
      allow update: if request.auth != null && (
        // Es miembro existente
        request.auth.uid in resource.data.members ||
        // Es un usuario nuevo uniendose (agrega su UID al array de members)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
         request.auth.uid in request.resource.data.members)
      );

      // Sub-colecciones de conversaciones
      match /conversations/{convId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members;

        match /messages/{msgId} {
          allow read, write: if request.auth != null &&
            request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members;
        }
      }

      // Sub-colecciones de contactos
      match /contacts/{contactId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members;
      }

      // Sub-coleccion de integraciones
      match /integrations/{integrationId} {
        allow read: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members;
        // Solo gerentes/admin pueden configurar integraciones
        allow write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/organizations/$(orgId)).data.members;
      }
    }
  }
}
